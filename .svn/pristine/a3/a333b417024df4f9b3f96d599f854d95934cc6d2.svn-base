  methods: {
    getBeforeDate(num, time) {
      let n = num
      let d = ''
      if (time) {
        d = new Date(time)
      } else {
        d = new Date()
      }
      let year = d.getFullYear()
      let mon = d.getMonth() + 1
      let day = d.getDate()
      if (day <= n) {
        if (mon > 1) {
          mon = mon - 1
        } else {
          year = year - 1
          mon = 12
        }
      }
      d.setDate(d.getDate() - n)
      year = d.getFullYear()
      mon = d.getMonth() + 1
      day = d.getDate()
      let s = year + '-' + (mon < 10 ? '0' + mon : mon) + '-' + (day < 10 ? '0' + day : day)
      return s
    },

    getDate(date) {
      this.getChildValue = date
      let y = date.substring(0, 4)
      let m = date.substring(4, 6)
      let d = date.substring(6)
      this.getProvinceCpList()
      this.getTrendList()
      this.getContentData()
      this.getTableRightList()
      this.weekEnd = y + '-' + m + '-' + d
      this.weekStart = this.getBeforeDate(6, this.weekEnd)
    },

    init() { },
    getContentData() {
      this.middleList = []
      getTableMiddleList({
        timest: this.getChildValue,
        eparchyCode: '0000',
        areaCode: '',
        gridId: '',
        flag: '4',
      })
        .then((res) => {
          if (res) {
            this.middleList = res.result.tblList
          }
        })
        .catch(() => { })
    },
    getTableRightList() {
      this.rightList = []
      getTableRightList({
        timest: this.getChildValue,
        eparchyCode: '0000',
        areaCode: '',
        gridId: '',
        flag: '4',
      })
        .then((res) => {
          if (res) {
            res.result.tblList.forEach((datas) => {
              this.rightList.push(datas)
            })
          }
        })
        .catch(() => {
          //console.log(123)
        })
    },
    //柱状图
    getProvinceCpList() {
      this.provinceCpList = []
      getProvinceCpList({
        timest: this.getChildValue,
        eparchyCode: '0000',
        areaCode: '',
        gridId: '',
        flag: '4',
      })
        .then((res) => {
          this.provinceData = res.result.weekStatus
          res.result.tblList.forEach((datas) => {
            this.provinceCpList.push(datas)
          })
        })
        .catch(() => { })
    },

    getTrendList() {
      this.trendList = []
      getTrendList({
        timest: this.getChildValue,
        eparchyCode: '0000',
        areaCode: '',
        gridId: '',
        flag: '4',
      })
        .then((res) => {
          if (res) {
            let index = 0
            res.result.tblList.forEach((datas) => {
              //取七天数据
              if (index <= 6) {
                this.trendList.push(datas)
                console.log('七天数据' + this.trendList.length)
              }
              index = index + 1
            })
          }
        })
        .catch(() => {
          //console.log(123)
        })
    },
    fatherMethod(val) {
      this.getChildValue = val
    },
    getToday() {
      let d = new Date()
      let year = d.getFullYear()
      let Mos = d.getMonth() + 1
      let Dates = d.getDate() - 2
      let youWant = year + '-' + this.addZero(Mos) + '-' + this.addZero(Dates)
      this.getChildValue = youWant.split('-').join('')
    },
    addZero(s) {
      return s < 10 ? '0' + s : s
    },
    /**
     * 格式化时间
     */
    getWeekDay(day) {
      let today = new Date()
      let targetday_milliseconds = today.getTime() + 1000 * 60 * 60 * 24 * day
      today.setTime(targetday_milliseconds) //注意，这行是关键代码
      let tYear = today.getFullYear()
      let tMonth = today.getMonth()
      let tDate = today.getDate()
      tMonth = this.addZero(tMonth + 1)
      tDate = this.addZero(tDate)
      return tYear + '-' + tMonth + '-' + tDate
    },
