<script>
import store from 'store'
import Header from '@/components/BigScreen/Header'
import FlexBox from '@/components/BigScreen/FlexBox'
import leftChart from '@/config/bigscreen/activity-leftBarChart.js'
import dialogComponent from '@/components/FifthGeneration/dialogComponent'
import { xfz8yk } from '@/api/z-evaluate.js'

export default {
  components: {
    Header,
    FlexBox,
    dialogComponent
  },
  data() {
      return {
        param: {
            timest: '',
            areaCode: '',
            eparchyCode: ''
        },
        bottomList: [{
            name: '新发展用户套餐分档',
            url: '/mass/index',
        }, {
            name: '新发展用户三无',
            url: '/mass/massAdvanceDeposit',
        }, {
            name: '存量用户三无',
            url: '/mass/newmass',
        },{
            name: '新发展用户首次预存',
            url: '/bigscreen/evaluateNewUser',
        }, {
            name: '新发展8元卡',
            url: '/bigscreen/evaluateNew8Card',
            active: true
        }, {
            name: '单宽转融活跃度',
            url: '/bigscreen/evaluateActivity',
        }],
        date: [],
        tableData: [],
        result: []
      }
  },
  created() {
      
  },
  mounted() {
  },
  methods: {
    getDate(date) {
        this.userInfo = store.get('userInfo');
        if (this.userInfo.isAddMask == '1') {
            this.$watermark(this.userInfo.serialNumber);
        } else {
            this.$watermark("");
        }
        this.param = {
            timest: date,
            eparchyCode: '0000',
            areaCode: '',
            gridId: '',
        }
        let today = date.split('-').join('')
        let y = today.substring(0,4)
        let m = today.substring(4,6)
        let d = today.substring(6)
        let weekEnd = y + '-' + m + '-' + d
        this.date = [this.getBeforeDate(6, weekEnd), this.getBeforeDate(0, weekEnd)]
        this.init()
    },
    getBeforeDate(num, time) {
      let n = num;
      let d = '';
      if(time) {
        d = new Date(time);
      } else {
        d = new Date();
      }
      let year = d.getFullYear();
      let mon = d.getMonth() + 1;
      let day = d.getDate();
      if(day <= n) {
        if(mon > 1) {
          mon = mon - 1;
        } else {
          year = year - 1;
          mon = 12;
        }
      }
      d.setDate(d.getDate() - n);
      year = d.getFullYear();
      mon = d.getMonth() + 1;
      day = d.getDate();
      let s = year + "-" + (mon < 10 ? ('0' + mon) : mon) + "-" + (day < 10 ? ('0' + day) : day);
      return s;
    },
    init() {
      let that = this
      xfz8yk(that.param).then(res => {
        if (res.rspCode === '0000') {
            let result = res.result || ''
            that.result = result.summaryJson
            that.tableData = result.listRes
            that.leftbarChart()
        }
      })
    },
    leftbarChart() {
        let xAxis = []
        let value = []
        let value1 = []
        this.tableData.forEach( (i, index) => {
            if(index > 0) {
                xAxis.push(i.eparchyName)
                value.push(i.newWeek8y)
                value1.push(i.newWeek8yRate)
            }
        })
        let data = {
            id: 'leftchart',
            xAxis: xAxis,
            value: value,
            value1: value1,
            legend: ['本周移网发展中8元卡发展量', '8元卡发展占比']
        }
        leftChart.initChart(data)
    },
     //监听顺序方法
    tableSortChange(column) {
      const self = this
      let index = 0
      let tmpList = []
      this.allData = this.tableData[0]
      let string = column.prop
      this.tableData.forEach(obj => {
        if (index !== 0) {
          obj[string] = parseFloat(obj[string])
          tmpList.push(obj)
        }
        index = index + 1
      })
      if (column.order === 'descending') {
        this.sortA(tmpList, column.prop)
      } else {
        this.sortB(tmpList, column.prop)
      }

      this.tableData.unshift(this.allData)
    },
    sortA(arr, name) {
      //外层循环，控制趟数，每一次找到一个最大值
      for (var i = 0; i < arr.length - 1; i++) {
        // 内层循环,控制比较的次数，并且判断两个数的大小
        for (var j = 0; j < arr.length - 1 - i; j++) {
          // 白话解释：如果前面的数大，放到后面(当然是从小到大的冒泡排序)
          if (arr[j][name] > arr[j + 1][name]) {
            var temp = arr[j];
            arr[j] = arr[j + 1];
            arr[j + 1] = temp;
          }
        }

      }
      this.tableData = arr
    },
    sortB(arr, name) {
      //外层循环，控制趟数，每一次找到一个最大值
      for (var i = 0; i < arr.length - 1; i++) {
        // 内层循环,控制比较的次数，并且判断两个数的大小
        for (var j = 0; j < arr.length - 1 - i; j++) {
          // 白话解释：如果前面的数大，放到后面(当然是从小到大的冒泡排序)
          if (arr[j][name] < arr[j + 1][name]) {
            var temp = arr[j];
            arr[j] = arr[j + 1];
            arr[j + 1] = temp;
          }
        }
      }
      this.tableData = arr
    },
    clickTable(row){
        row.type = 2
        this.$router.push({ path: "/bigscreen/evaluateDetails", query: { rowData: row } });
    }
  }
}
