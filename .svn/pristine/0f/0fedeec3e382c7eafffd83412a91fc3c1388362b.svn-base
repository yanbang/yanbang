              text: '今天',
              onClick(picker) {
                const end = new Date()
                const start = new Date()
                picker.$emit('pick', [start, end])
              }
            },

            {
              text: '最近一周',
              onClick(picker) {
                const end = new Date()
                const start = new Date()
