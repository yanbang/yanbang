    components: {
      Header,
      FlexBox,
      AroundFinishCity,
      AroundTheCity,
      development,
      frist_histogram,
      trend,
      performance
    },
    data() {
      return {
        isRouterAlive:true,
        trendList:[],
        weekStart:'',
        weekEnd:'',
        middleList:[],
        provinceCpList:[],
        rightList:[],
        provinceData:{},
        getChildValue:'',
        flag:'3',
        bottomList:[
           {
            name: '移网发展',
            url: '/Evaluate/MoveNet',
           
          },
          {
            name: '5G发展',
            url: '/Evaluate/fifth-generation',
