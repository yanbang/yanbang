<script>
import Header from '@/components/BigScreen/Header'
import FlexBox from '@/components/BigScreen/FlexBox'
import AroundFinishCity from '@/components/mass/fristTable'
import stackChart from '@/components/mass/nodepostit'
import TheWorst from  '@/components/mass/TheWorst'
import AdvanceDeposit from '@/components/mass/AdvanceDeposit'
import { getDepositData } from '@/views/mass/service/service'
export default {
  name:'newmass',
  provide(){
    return {
      reload : this.reload
    }
  },
  components: {
    Header,
    FlexBox,
    AroundFinishCity,
    stackChart,
    TheWorst,
    AdvanceDeposit
  },
  data() {
    return {
      isRouterAlive:true,
      weekStart:'',
      weekEnd:'',
      rightList:[],
      stackChart:[],
      TheWorst:[],
      AdvanceDeposit:[],
      getChildValue:'',
      flag:'3',
      bottomList:[
        {
          name: '新发展用户套餐分档',
          url: '/mass/index',
        }, {
          name: '新发展用户三无',
          url: '/mass/massAdvanceDeposit',
        }, {
          name: '存量用户三无',
          url: '/mass/newmass',
          active:true
        },{
          name: '新发展用户首次预存',
          url: '/bigscreen/evaluateNewUser',
        }, {
          name: '新发展8元卡',
          url: '/bigscreen/evaluateNew8Card',
        }, {
          name: '单宽转融活跃度',
          url: '/bigscreen/evaluateActivity',
        }
      ],
      pickerOptions2: {
        // 今天，昨天，这个月，上个月
        shortcuts: [
          {
            text: '今天',
            onClick(picker) {
              const end = new Date()
              const start = new Date()
              picker.$emit('pick', [start, end])
            }
          },

          {
            text: '最近一周',
            onClick(picker) {
              const end = new Date()
              const start = new Date()
              start.setTime(start.getTime() - 3600 * 1000 * 24 * 7)
              picker.$emit('pick', [start, end])
            }
          },
        ]
      },
    }
  },
  mounted() {
    if (window.sessionStorage.getItem('selectTime')){
      this.getChildValue = window.sessionStorage.getItem('selectTime')
      //console.log( this.getChildValue)
    }else {
      this.getToday()
      this.weekStart = this.getWeekDay(-6)
      this.weekEnd  = this.getWeekDay(0)
    }
    this.init()
  },
  methods: {
    init() {
    },
    getBeforeDate(num, time) {
      let n = num;
      let d = '';
      if(time) {
        d = new Date(time);
      } else {
        d = new Date();
      }
      let year = d.getFullYear();
      let mon = d.getMonth() + 1;
      let day = d.getDate();
      if(day <= n) {
        if(mon > 1) {
          mon = mon - 1;
        } else {
          year = year - 1;
          mon = 12;
        }
      }
      d.setDate(d.getDate() - n);
      year = d.getFullYear();
      mon = d.getMonth() + 1;
      day = d.getDate();
      let s = year + "-" + (mon < 10 ? ('0' + mon) : mon) + "-" + (day < 10 ? ('0' + day) : day);
      return s;
    },
    getDate(date) {
      //console.log(date)
      if(date){
        this.getChildValue = date
        this.getDepositData()
        date.split('-').join('')
        let y = date.substring(0,4)
        let m = date.substring(4,6)
        let d = date.substring(6)
        this.weekEnd = y + '-' + m + '-' + d
        this.weekStart = this.getBeforeDate(6,this.weekEnd )
        //console.log(this.weekStart)
      }else{
        this.getToday()
        this.getDepositData()
      }

    },
    getDepositData() {
      this.rightList = []
      getDepositData({
        timest: this.getChildValue,
        eparchyCode: "0000",
        areaCode:"",
        gridId:""
      }).then(res => {
        if (res) {
          this.rightList = res.result.listRes
          this.stackChart = res.result.listRes
          this.AdvanceDeposit = res.result.listRes
          this.TheWorst = res.result.listRes
          // res.result.listRes.forEach(datas => {
          //   this.rightList.push(datas)
          //   this.stackChart.push(datas)
          //   this.AdvanceDeposit.push(datas)
          //   this.TheWorst.push(datas)
          // })
        }
      })
        .catch(() => {

        })

    },

    getToday() {
      let d = new Date();
      let year = d.getFullYear()
      let Mos = d.getMonth() + 1
      let Dates = d.getDate() - 2
      let youWant = year + '-' + this.addZero(Mos) + '-' + this.addZero(Dates)
      this.getChildValue = youWant.split('-').join('')

    },
    addZero(s) {
      return s < 10 ? '0' + s : s
    },
    getWeekDay(day) {
      let today = new Date();
      let targetday_milliseconds = today.getTime() + 1000 * 60 * 60 * 24 * day;
      today.setTime(targetday_milliseconds); //注意，这行是关键代码
      let tYear = today.getFullYear();
      let tMonth = today.getMonth();
      let tDate = today.getDate();
      tMonth = this.doHandleMonth(tMonth + 1);
      tDate = this.doHandleMonth(tDate);
      return tYear + "-" + tMonth + "-" + tDate;

    },
    doHandleMonth(month) {
      let m = month;
      if (month.toString().length == 1) {
        m = "0" + month;
      }
      return m;
    },
    reload(){
      this.isRouterAlive = false
      this.$nextTick(function(){
        this.isRouterAlive = true
      })
    },

    created() {

    }
  }
}
</script>

