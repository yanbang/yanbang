    performance
  },
  data() {
    return {
      trendList:[],
      middleList:[],
      provinceCpList:[],
      rightList:[],
      getChildValue:'',
      weekStart:'',
      provinceData:{},
      weekEnd:'',
      adressName:'',
      bottomList:[
        // {
        //   name: '5G发展',
        //   url: '../Evaluate/fifth-generation',
        // },
        // {
        //   name: '移网发展',
        //   url: '../Evaluate/MoveNet',
        // },{
        //   name: '宽带发展',
        //   url: '../Evaluate/broadband',
