    },
    //将底部导航栏变为false
    changeFalese(){
      this.bottomList.forEach(obj => {
        obj.active = false
      })
    },
    //子组件传值
    getDate(date){
      this.getChildValue = date
      this.getProvinceCpList()
      this.getTrendList()
      this.getContentData()
      this.getTableRightList()
      let y = date.substring(0,4)
      let m = date.substring(4,6)
      let d = date.substring(6)
      this.weekEnd = y + '-' + m + '-' + d
      this.weekStart = this.getBeforeDate(6,this.weekEnd )

    },
    getBeforeDate(num, time) {
      let n = num;
      let d = '';
      if(time) {
        d = new Date(time);
      } else {
        d = new Date();
      }
      let year = d.getFullYear();
      let mon = d.getMonth() + 1;
      let day = d.getDate();
      if(day <= n) {
        if(mon > 1) {
          mon = mon - 1;
        } else {
          year = year - 1;
          mon = 12;
        }
      }
      d.setDate(d.getDate() - n);
      year = d.getFullYear();
      mon = d.getMonth() + 1;
      day = d.getDate();
      let s = year + "-" + (mon < 10 ? ('0' + mon) : mon) + "-" + (day < 10 ? ('0' + day) : day);
      return s;
    },
    init() {},
    goBack(){

      if (this.areaCode !== ''){
        this.getTrendList2('','')
      }else {
        this.$router.go(-1)
      }
    },
    getTrendList2(areaCode,gridId,adressName){
      this.areaCode = areaCode
      this.gridId = gridId
      this.adressName = adressName
      this.getContentData()
      this.getTableRightList()
      this.getTrendList()
    },
    getTrendList(){
      //省或者地市 进来的时候 只传eparchyCode
      //点击区县 传eparchyCode areaCode
      //点击营服 传eparchyCode areaCode gridId
      this.trendList = []
      getTrendList({
        "timest": this.getChildValue,
        "eparchyCode": this.$route.query.eparchyName.eparchyCode,
        "areaCode": this.areaCode,
        "gridId":  this.gridId,
        "flag": this.$route.query.eparchyName.flag
      }).then(res => {
        if(res){
          //alert(this.$route.query.eparchyName.flag)
          this.provinceData.weekStatus  = res.result.weekStatus
          this.provinceData.quarterStatus = res.result.quarterStatus
          res.result.tblList.forEach(datas=>{
            this.trendList.push(datas);
          })
        }
      })
        .catch(() => {
          //console.log(123)
        })
    },
    getContentData(){
      this.middleList = []
      getTableMiddleList({
        "timest": this.getChildValue,
        "eparchyCode": this.$route.query.eparchyName.eparchyCode,
        "areaCode": this.areaCode,
        "gridId":  this.gridId,
        "flag": this.$route.query.eparchyName.flag
      }).then(res => {
        if(res){
          this.middleList = res.result.tblList
        }
      }).catch(() => {

      })
    },
    getTableRightList(){
      this.rightList = []
      getTableRightList({
        "timest": this.getChildValue,
        "eparchyCode": this.$route.query.eparchyName.eparchyCode,
        "areaCode": this.areaCode,
        "gridId":  this.gridId,
        "flag": this.$route.query.eparchyName.flag
      }).then(res => {
        if(res){
          let index = 0
          res.result.tblList.forEach(datas=>{
            this.rightList.push(datas)
          })
        }
      })
        .catch(() => {
          //console.log(123)
        })
    },
    //柱状图
    getProvinceCpList(){
      this.provinceCpList = []
      getProvinceCpList({
        "timest": this.getChildValue,
        "eparchyCode":  this.$route.query.eparchyName.eparchyCode,
        "areaCode": this.areaCode,
        "gridId": this.gridId,
        "flag": "1"
      }).then(res => {
        this.provinceData  = res.result
        res.result.tblList.forEach(datas=>{
          this.provinceCpList.push(datas);
        })
      })
        .catch(() => {
        })
    },
    fatherMethod(val){
      this.getChildValue = val
    },
    getToday(){
      let d = new Date();
      let year = d.getFullYear()
      let Mos = d.getMonth() + 1
      let Dates =  d.getDate() - 2
      let youWant = year + '-' + this.addZero(Mos) + '-' + this.addZero(Dates)
      this.getChildValue = youWant.split('-').join('')
      console.log(this.getChildValue)
    },
    addZero(s) {
      return s < 10 ? '0' + s : s
    },
    /**
     * 格式化时间
     */
    getWeekDay(day){
      let today = new Date();
      let targetday_milliseconds = today.getTime() + 1000 * 60 * 60 * 24 * day;
      today.setTime(targetday_milliseconds); //注意，这行是关键代码
      let tYear = today.getFullYear();
      let tMonth = today.getMonth();
      let tDate = today.getDate();
      tMonth = this.doHandleMonth(tMonth + 1);
      tDate = this.doHandleMonth(tDate);
      return tYear + "-" + tMonth + "-" + tDate;

    },
    doHandleMonth(month){
      let m = month;
      if(month.toString().length == 1){
        m = "0" + month;
      }
      return m;
    },
  }
}
