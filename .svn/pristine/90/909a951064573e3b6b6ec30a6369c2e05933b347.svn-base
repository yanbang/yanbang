      this.adressName = this.$route.query.eparchyName.areaName
    }
    if (this.$route.query.eparchyName.gridId !== '00'){
      this.adressName = this.$route.query.eparchyName.gridName
    }
    this.areaCode = this.$route.query.eparchyName.areaCode === '00' ? '' : this.$route.query.eparchyName.areaCode
    this.gridId = this.$route.query.eparchyName.gridId === '00' ? '' : this.$route.query.eparchyName.gridId
    this.init()

  },

  methods: {
    //获取标题
    getTypeName(){
      let typename = ''
      if(this.$route.query.eparchyName.flag === '1'){
        typename = '5G发展通报'
        this.changeFalese()
        this.bottomList[0].active = true
      }else if(this.$route.query.eparchyName.flag === '2'){
