        // {
        //   name: '单宽转融',
        //   url: '../Financial/singleWidth',
        // },
        // {
        //   name: '单移转融',
        //   url: '../Financial/singleShift',
        // },
        // {
        //   name: '金融发展',
        //   url: '../Financial/Financial',
        // },
      ],
      citys:'济南',
      weekday:'2021-02-01~2021-02-07',
      areaCode:'',
      gridId:'',
      typeName:''
    }
  },
  mounted() {
    if (store.get('userInfo').isAddMask == '1') {
      this.$watermark(store.get('userInfo').serialNumber);
    } else {
      this.$watermark("");
    }
    let typename = ''
    if(this.$route.query.eparchyName.flag === '1'){
      typename = '5G发展通报'
      this.changeFalese()
      this.bottomList[0].active = true
    }else if(this.$route.query.eparchyName.flag === '2'){
      typename = '移网发展通报'
      this.changeFalese()
      this.bottomList[1].active = true
    }else if(this.$route.query.eparchyName.flag === '3'){
      typename = '宽带发展通报'
      this.changeFalese()
      this.bottomList[2].active = true
    }else if(this.$route.query.eparchyName.flag === '4'){
      typename = '单宽转融发展通报'
      this.changeFalese()
      this.bottomList[3].active = true
    }else if(this.$route.query.eparchyName.flag === '5'){
      typename = '单移转融发展通报'
      this.changeFalese()
      this.bottomList[4].active = true
    }else {
      typename = '金融发展通报'
      this.changeFalese()
      this.bottomList[5].active = true
    }

    if (window.sessionStorage.getItem('selectTime')){
      this.getChildValue = window.sessionStorage.getItem('selectTime')
      console.log( this.getChildValue)
    }else {
      this.getToday()
    }
    //this.getDate(this.getChildValue)
    this.typeName = typename
