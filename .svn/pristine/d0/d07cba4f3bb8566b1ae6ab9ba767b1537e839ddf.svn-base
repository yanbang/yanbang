import { getTableMiddleList,getTableRightList,getProvinceCpList,getTrendList } from '@/views/Evaluate/service/service'
export default {
  name:'mass',
  provide(){
    return {
      reload : this.reload
    }
  },
  components: {
    Header,
    FlexBox,
    AroundFinishCity,
    doughnutChart,
    stackChart,
    TheWorst
  },
  data() {
    return {
      isRouterAlive:true,
      weekStart:'',
      weekEnd:'',
      rightList:[],
      provinceData:{},
      getChildValue:'',
      flag:'3',
      bottomList:[
        {
          name: '新发展用户套餐分档',
          url: '../Evaluate/MoveNet',
        },{
          name: '新发展用户三无',
          url: '../Evaluate/broadband',
          active: true,
        },
        {
          name: '存量用户三无',
          url: '../Financial/singleWidth',
        },
        {
          name: '新发展用户首次预存',
          url: '../Financial/singleShift',
        },
        {
          name: '新发展8元卡',
          url: '../Financial/singleShift',
        },
        {
          name: '单宽转融活跃度',
          url: '../Financial/singleShift',
        }
      ],
      pickerOptions2: {
        // 今天，昨天，这个月，上个月
        shortcuts: [
          {
            text: '今天',
            onClick(picker) {
              const end = new Date()
              const start = new Date()
              picker.$emit('pick', [start, end])
            }
          },

          {
            text: '最近一周',
            onClick(picker) {
              const end = new Date()
              const start = new Date()
              start.setTime(start.getTime() - 3600 * 1000 * 24 * 7)
              picker.$emit('pick', [start, end])
            }
          },
        ]
